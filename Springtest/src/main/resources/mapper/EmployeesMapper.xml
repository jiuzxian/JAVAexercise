<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springtest.mapper.EmployeesMapper">

    <select id="all" resultType="com.example.springtest.entity.Employees">
        select *
        from employees
    </select>

    <select id="findBy" parameterType="String" resultType="com.example.springtest.entity.Employees">
        select *
        from employees
        where Name LIKE '%${par}%' or EmployeeID=#{par}
    </select>

        <select id="add">
        insert into employees (
			Name,DepartmentID,Position,HireDate)
		values(
			 #{n},#{d},#{p},#{h})

    </select>

        <select id="deleteByID" >

        delete from employees
        where EmployeeID=${id}

    </select>



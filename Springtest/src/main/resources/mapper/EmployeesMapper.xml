    <select id="update" parameterType="com.example.springtest.entity.Employees" >
        update employees
        set Name= #{e.Name},DepartmentID =#{e.DepartmentID},Position =#{e.Position},HireDate =#{e.HireDate}
        where EmployeeID =${e.EmployeeID};
    </select>

</mapper>
